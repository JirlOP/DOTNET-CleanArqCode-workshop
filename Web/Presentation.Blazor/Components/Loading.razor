@using MudBlazor

@if (IsLoading)
{
    <MudProgressCircular Indeterminate="true" Class="mx-auto d-block"
        role="status" id="loading-spinner" />
}
else
{
    @ChildContent
}

@code {
    [Parameter]
    public bool IsLoading { get; set; } = false;

    [Parameter]
    public RenderFragment? ChildContent { get; set; } = null!;
}
